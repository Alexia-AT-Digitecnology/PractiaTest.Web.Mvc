@using PractiaTest.Models.Entities
@model PractiaTest.Models.Entities.CompleteInvoice

<h1>Invoice Page</h1>

<div>
  <p class="font-weight-bold">Client name: @Model.ClientName</p>
  <p class="font-weight-bold">Issue date: @Model.IssueDate</p>
  <p class="font-weight-bold">Paid: @Model.Paid</p>

  <h2>Invoice Details</h2>

  <table class='table table-striped'>
    <thead>
    <tr>
      <th>Product name</th>
      <th>Amount</th>
      <th>Sell price</th>
      <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (InvoiceDetail invoiceDetail in @Model.InvoiceDetails)
    {
      <tr>
        <td>@invoiceDetail.ProductName</td>
        <td>@invoiceDetail.Amount</td>
        <td>@invoiceDetail.SellPrice.ToString("C")</td>
        <td>@invoiceDetail.Total</td>
      </tr>
    }
    </tbody>
  </table>

  <p class="font-weight-bold">Total: @Model.Total</p>
</div>
<div class='card-footer'>
  <button class='btn btn-outline-secondary'
          style='width:80px'
          onclick="history.go(-1);">
    <i class='fa fa-chevron-left'></i> Back
  </button>
</div>
