@using PractiaTest.Models.Entities
@model List<PractiaTest.Models.Entities.Client>

<h1>Client List</h1>

@if (Model.Count > 0)
{
    <table class='table table-striped'>
        <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Born date</th>
            <th>Phone number</th>
            <th>Email</th>
            <th>Has 10% discount?</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Client client in Model)
        {
            <tr *ngFor="let client of clients">
                <td>
                    <a asp-controller="Home" asp-action="ClientViewer" asp-route-id="@client.Id">
                        @client.Name
                    </a></td>
                <td>@client.Address</td>
                <td>@client.BornDate</td>
                <td>@client.PhoneNumber</td>
                <td>@client.Email</td>
                <td>@client.Has10PercentDiscount.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>
}